<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/bc_card_dark"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvBusinessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del comercio"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/bc_text_primary" />

    <TextView
        android:id="@+id/tvBusinessCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rubro"
        android:textSize="14sp"
        android:textColor="@color/bc_text_secondary"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tvBusinessAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DirecciÃ³n"
        android:textSize="13sp"
        android:textColor="@color/bc_text_secondary"
        android:layout_marginTop="2dp" />

    <!-- Rating promedio del negocio -->
    <RatingBar
        android:id="@+id/rbBusinessStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="true"
        android:layout_marginTop="6dp"
        android:progressTint="@color/bc_accent_green"
        android:secondaryProgressTint="@color/bc_chip_bg" />

</LinearLayout>




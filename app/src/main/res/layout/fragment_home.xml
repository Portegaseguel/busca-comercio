<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgHomeIllustration"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_online_shop" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busca Comercio"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/bc_text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvHomeSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encuentra productos y servicios de comercios locales cerca de ti."
            android:textSize="14sp"
            android:textColor="@color/bc_text_secondary"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp" />

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bc_card_dark"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:clipToPadding="false"
            android:clipToOutline="false">

            <TextView
                android:id="@+id/tvCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Qué quieres hacer hoy?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/bc_text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Botón buscador -->
            <Button
                android:id="@+id/btnGoToSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buscar comercios"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/bc_text_primary"
                android:backgroundTint="@color/bc_accent_green"
                android:layout_marginBottom="12dp" />

            <!-- Botón login/registro -->
            <Button
                android:id="@+id/btnGoToLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión / Crear cuenta"
                android:textAllCaps="false"
                android:textColor="@color/bc_text_primary"
                android:backgroundTint="@color/bc_chip_bg" />
        </LinearLayout>

        <!-- Texto -->
        <TextView
            android:id="@+id/tvHomeHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puedes explorar los comercios sin registrarte, y crear una cuenta cuando quieras valorar o registrar tu propio negocio."
            android:textSize="12sp"
            android:textColor="@color/bc_text_secondary"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>



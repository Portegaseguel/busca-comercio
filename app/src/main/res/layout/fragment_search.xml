<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_background_dark"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscador de comercios"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/bc_text_primary"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar por nombre, rubro o comuna…"
        android:background="@color/bc_card_dark"
        android:padding="10dp"
        android:textColor="@color/bc_text_primary"
        android:textColorHint="@color/bc_text_secondary"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvSearchEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aún no hay comercios registrados."
        android:textSize="14sp"
        android:textColor="@color/bc_text_secondary"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBusinesses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>


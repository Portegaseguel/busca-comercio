<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_background_dark"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvMyBusinessesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis comercios"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/bc_text_primary"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnAddBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar nuevo comercio"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/bc_text_primary"
        android:backgroundTint="@color/bc_accent_green"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/progressMyBusinesses"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvMyBusinessesEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AÃºn no has registrado comercios."
        android:textSize="14sp"
        android:textColor="@color/bc_text_secondary"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMyBusinesses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

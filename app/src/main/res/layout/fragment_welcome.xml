<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_background_dark"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenid@!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/bc_text_primary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvWelcomeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desde aquí puedes gestionar tus comercios o ir al buscador."
        android:textSize="14sp"
        android:textColor="@color/bc_text_secondary"
        android:layout_marginBottom="24dp" />

    <!-- Ir al buscador / Home -->
    <Button
        android:id="@+id/btnGoToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir al buscador"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/bc_text_primary"
        android:backgroundTint="@color/bc_card_dark"
        android:layout_marginBottom="12dp" />

    <!-- Ver / gestionar mis comercios -->
    <Button
        android:id="@+id/btnGoToMyBusinesses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis comercios"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/bc_text_primary"
        android:backgroundTint="@color/bc_accent_green"
        android:layout_marginBottom="12dp" />

    <!-- Cerrar sesión -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/bc_text_primary"
        android:backgroundTint="@color/bc_card_dark"
        android:layout_marginTop="24dp" />

</LinearLayout>




<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bc_card_dark"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- Nombre de usuario + estrellas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuario"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/bc_text_primary" />

        <TextView
            android:id="@+id/tvStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★★★★★"
            android:textSize="14sp"
            android:textColor="@color/bc_accent_green" />
    </LinearLayout>

    <!-- Comentario -->
    <TextView
        android:id="@+id/tvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comentario del usuario"
        android:textSize="13sp"
        android:textColor="@color/bc_text_primary"
        android:layout_marginBottom="4dp" />

    <!-- Fecha -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-11-23"
        android:textSize="11sp"
        android:textColor="@color/bc_text_secondary" />

</LinearLayout>

